<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relateveGone"
    android:background="@drawable/bassback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bb"
        android:visibility="invisible" />
    <TextView
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:id="@+id/textPause"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="pause"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="#f45e01"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/startMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Start Match"
        android:clickable="true"
        android:onClick="switchBack"
        android:textColor="#f45e01"
        android:textSize="30sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/hnt"
        android:background="#96cecece"
        android:layout_width="352dp"
        android:layout_height="162dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:text="you can not remove any point after add it ..
        you can puase stopwatch if you click on pause ..
        you can start when click on Start Match .."
        android:textSize="19sp" />
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">
        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#e9e0e0"
            android:textSize="45sp" />
        <LinearLayout
            android:id="@+id/layoutScore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Team:A"
                    android:textColor="#f2c14f"
                    android:textSize="40sp" />
                <TextView
                    android:id="@+id/scoreTeamA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/threePointA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="threeP_A"
                    android:shadowRadius="5"
                    android:text="+3 Points"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />
                <Button
                    android:id="@+id/twoPointA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="twoP_A"
                    android:shadowRadius="5"
                    android:text="+2 Points"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />
                <Button
                    android:id="@+id/onePointA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="oneP_A"
                    android:shadowRadius="5"
                    android:text="+1 Point"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />
            </LinearLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="59dp"
                android:background="#cde1b800" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Team:B"
                    android:textColor="#f2c14f"
                    android:textSize="40sp" />
                <TextView
                    android:id="@+id/scoreTeamB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/threePointB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="threeP_B"
                    android:shadowRadius="5"
                    android:text="+3 Points"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    tools:capitalize="characters" />
                <Button
                    android:id="@+id/twoPointB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="twoP_B"
                    android:shadowRadius="5"
                    android:text="+2 Points"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />
                <Button
                    android:id="@+id/onePointB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="oneP_B"
                    android:shadowRadius="5"
                    android:text="+1 Point"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/buttonshape"
            android:onClick="resetScore"
            android:shadowRadius="5"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>